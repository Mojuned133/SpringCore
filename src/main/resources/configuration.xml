<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Using p schema -->
    <bean class="com.springcore.springcore.Student" name="student1" p:studentId="2423" p:studentName="Gazi" p:studentAddress="lko" />

    <!-- Using <property> element -->
    <bean class="com.springcore.springcore.Student" name="student2">
        <property name="studentId" value="335" />
        <property name="studentName" value="junaid gazi" />
        <property name="studentAddress" value="Mohali" />
    </bean>

</beans>
